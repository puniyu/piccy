{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "piccy",
  "version": "0.4.0",
  "identifier": "com.piccy",
  "build": {
    "beforeDevCommand": "pnpm --filter puniyu-web run dev",
    "beforeBuildCommand": "pnpm --filter puniyu-web run build",
    "devUrl": "http://localhost:33720",
    "frontendDist": "web/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "piccy",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "deb"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "languages": [
          "SimpChinese"
        ],
        "displayLanguageSelector": false,
        "startMenuFolder": "piccy"
      }
    }
  }
}
